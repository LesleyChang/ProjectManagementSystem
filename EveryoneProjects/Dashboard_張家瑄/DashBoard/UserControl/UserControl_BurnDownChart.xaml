<UserControl x:Class="DashBoard.UserControl_BurnDownChart"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DashBoard"
             mc:Ignorable="d" 
             d:DesignHeight="210" d:DesignWidth="320">
    <Viewbox Stretch="Fill">
        <Grid Height="210" Width="320">
            <Grid.Effect>
                <DropShadowEffect Color="#FFCACACA"/>
            </Grid.Effect>
            <Image Source="/DashBoard;component/Images/BurndownChart.png" Stretch="Fill" />
        </Grid>
    </Viewbox>
</UserControl>
