<Window x:Class="Wpf_ProjectCostManager.View.Window_CategoryAdder"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Wpf_ProjectCostManager.View"
        mc:Ignorable="d"
        Background="#FF404040"
        Title="Window_CategoryAdder" Height="150" Width="600">
    <Grid>
        <TextBox x:Name="tb_CatName" HorizontalAlignment="Left" Foreground="White" Background="#FF404040" Height="23" Margin="23,47,0,0" VerticalAlignment="Top" Width="350"/>
        <Label Content="New Category" Foreground="LightGray" HorizontalAlignment="Left" Margin="23,19,0,0" VerticalAlignment="Top" Width="145" Height="28" FontSize="12"/>
        <Button Content="OK" Foreground="White" Background="#FF404040" HorizontalAlignment="Left" Margin="407,46,0,0" VerticalAlignment="Top" Width="75" Click="OK"/>
        <Button Content="Cancel" Foreground="White" Background="#FF404040" HorizontalAlignment="Left" Margin="496,46,0,0" VerticalAlignment="Top" Width="75" Click="Cancel"/>

    </Grid>
</Window>
